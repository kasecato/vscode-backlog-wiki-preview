{
	"name": "vscode-backlog-wiki-preview",
	"displayName": "VS Code Backlog Wiki Preview",
	"description": "Backlog Wiki Preview for VS Code",
	"version": "0.0.1",
	"publisher": "k--kato",
	"engines": {
		"vscode": "^1.0.0"
	},
	"main": "./out/extension",
	"categories": [
		"Languages"
	],
	"activationEvents": [
		"onLanguage:backlog",
		"onCommand:backlog.refreshPreview",
		"onCommand:backlog.showPreview",
		"onCommand:backlog.showPreviewToSide",
		"onCommand:backlog.showSource",
		"onCommand:backlog.showPreviewSecuritySelector"
	],
	"contributes": {
		"languages": [
			{
				"id": "backlog",
				"aliases": [
					"Backlog",
					"backlog"
				],
				"extensions": [
					".bl",
					".biki",
					".backlog"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "backlog",
				"scopeName": "text.html.backlog",
				"path": "./syntaxes/backlog.tmLanguage",
				"embeddedLanguages": {
					"meta.embedded.block.html": "html",
					"source.js": "javascript",
					"source.css": "css",
					"meta.embedded.block.frontmatter": "yaml",
					"meta.embedded.block.css": "css",
					"meta.embedded.block.ini": "ini",
					"meta.embedded.block.java": "java",
					"meta.embedded.block.lua": "lua",
					"meta.embedded.block.makefile": "makefile",
					"meta.embedded.block.perl": "perl",
					"meta.embedded.block.r": "r",
					"meta.embedded.block.ruby": "ruby",
					"meta.embedded.block.php": "php",
					"meta.embedded.block.sql": "sql",
					"meta.embedded.block.vs_net": "vs_net",
					"meta.embedded.block.xml": "xml",
					"meta.embedded.block.xsl": "xsl",
					"meta.embedded.block.yaml": "yaml",
					"meta.embedded.block.dosbatch": "dosbatch",
					"meta.embedded.block.clojure": "clojure",
					"meta.embedded.block.coffee": "coffee",
					"meta.embedded.block.c": "c",
					"meta.embedded.block.cpp": "cpp",
					"meta.embedded.block.diff": "diff",
					"meta.embedded.block.dockerfile": "dockerfile",
					"meta.embedded.block.go": "go",
					"meta.embedded.block.groovy": "groovy",
					"meta.embedded.block.jade": "jade",
					"meta.embedded.block.javascript": "javascript",
					"meta.embedded.block.json": "json",
					"meta.embedded.block.less": "less",
					"meta.embedded.block.objc": "objc",
					"meta.embedded.block.scss": "scss",
					"meta.embedded.block.perl6": "perl6",
					"meta.embedded.block.powershell": "powershell",
					"meta.embedded.block.python": "python",
					"meta.embedded.block.rust": "rust",
					"meta.embedded.block.scala": "scala",
					"meta.embedded.block.shellscript": "shellscript",
					"meta.embedded.block.typescript": "typescript",
					"meta.embedded.block.typescriptreact": "typescriptreact",
					"meta.embedded.block.csharp": "csharp",
					"meta.embedded.block.fsharp": "fsharp"
				}
			}
		],
		"commands": [
			{
				"command": "backlog.showPreview",
				"title": "%backlog.preview.title%",
				"category": "Backlog",
				"icon": {
					"light": "./media/Preview.svg",
					"dark": "./media/Preview_inverse.svg"
				}
			},
			{
				"command": "backlog.showPreviewToSide",
				"title": "%backlog.previewSide.title%",
				"category": "Backlog",
				"icon": {
					"light": "./media/PreviewOnRightPane_16x.svg",
					"dark": "./media/PreviewOnRightPane_16x_dark.svg"
				}
			},
			{
				"command": "backlog.showSource",
				"title": "%backlog.showSource.title%",
				"category": "Backlog",
				"icon": {
					"light": "./media/ViewSource.svg",
					"dark": "./media/ViewSource_inverse.svg"
				}
			},
			{
				"command": "backlog.refreshPreview",
				"title": "%backlog.refreshPreview.title%",
				"category": "Backlog"
			},
			{
				"command": "backlog.showPreviewSecuritySelector",
				"title": "%backlog.showPreviewSecuritySelector.title%",
				"category": "Backlog"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "backlog.showPreviewToSide",
					"when": "editorLangId == backlog",
					"alt": "backlog.showPreview",
					"group": "navigation"
				},
				{
					"command": "backlog.showSource",
					"when": "resourceScheme == backlog",
					"group": "navigation"
				},
				{
					"command": "backlog.refreshPreview",
					"when": "resourceScheme == backlog",
					"group": "1_backlog"
				},
				{
					"command": "backlog.showPreviewSecuritySelector",
					"when": "resourceScheme == backlog",
					"group": "1_backlog"
				}
			],
			"explorer/context": [
				{
					"command": "backlog.showPreview",
					"when": "resourceLangId == backlog",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "backlog.showPreview",
					"when": "editorLangId == backlog",
					"group": "navigation"
				},
				{
					"command": "backlog.showPreviewToSide",
					"when": "editorLangId == backlog",
					"group": "navigation"
				},
				{
					"command": "backlog.showSource",
					"when": "resourceScheme == backlog",
					"group": "navigation"
				},
				{
					"command": "backlog.showPreviewSecuritySelector",
					"when": "editorLangId == backlog"
				},
				{
					"command": "backlog.showPreviewSecuritySelector",
					"when": "resourceScheme == backlog"
				}
			]
		},
		"keybindings": [
			{
				"command": "backlog.showPreview",
				"key": "shift+ctrl+v",
				"mac": "shift+cmd+v",
				"when": "editorLangId == backlog"
			},
			{
				"command": "backlog.showPreviewToSide",
				"key": "ctrl+k v",
				"mac": "cmd+k v",
				"when": "editorLangId == backlog"
			}
		],
		"snippets": [
			{
				"language": "backlog",
				"path": "./snippets/backlog.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Backlog",
			"order": 20,
			"properties": {
				"backlog.styles": {
					"type": "array",
					"default": [],
					"description": "%backlog.styles.dec%",
					"scope": "resource"
				},
				"backlog.previewFrontMatter": {
					"type": "string",
					"enum": [
						"hide",
						"show"
					],
					"default": "hide",
					"description": "%backlog.previewFrontMatter.dec%",
					"scope": "resource"
				},
				"backlog.preview.breaks": {
					"type": "boolean",
					"default": false,
					"description": "%backlog.preview.breaks.desc%",
					"scope": "resource"
				},
				"backlog.preview.linkify": {
					"type": "boolean",
					"default": true,
					"description": "%backlog.preview.linkify%",
					"scope": "resource"
				},
				"backlog.preview.fontFamily": {
					"type": "string",
					"default": "-apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', 'HelveticaNeue-Light', 'Ubuntu', 'Droid Sans', sans-serif",
					"description": "%backlog.preview.fontFamily.desc%",
					"scope": "resource"
				},
				"backlog.preview.fontSize": {
					"type": "number",
					"default": 14,
					"description": "%backlog.preview.fontSize.desc%",
					"scope": "resource"
				},
				"backlog.preview.lineHeight": {
					"type": "number",
					"default": 1.6,
					"description": "%backlog.preview.lineHeight.desc%",
					"scope": "resource"
				},
				"backlog.preview.scrollPreviewWithEditorSelection": {
					"type": "boolean",
					"default": true,
					"description": "%backlog.preview.scrollPreviewWithEditorSelection.desc%",
					"scope": "resource"
				},
				"backlog.preview.markEditorSelection": {
					"type": "boolean",
					"default": true,
					"description": "%backlog.preview.markEditorSelection.desc%",
					"scope": "resource"
				},
				"backlog.preview.scrollEditorWithPreview": {
					"type": "boolean",
					"default": true,
					"description": "%backlog.preview.scrollEditorWithPreview.desc%",
					"scope": "resource"
				},
				"backlog.preview.doubleClickToSwitchToEditor": {
					"type": "boolean",
					"default": true,
					"description": "%backlog.preview.doubleClickToSwitchToEditor.desc%",
					"scope": "resource"
				},
				"backlog.trace": {
					"type": "string",
					"enum": [
						"off",
						"verbose"
					],
					"default": "off",
					"description": "%backlog.trace.desc%",
					"scope": "window"
				}
			}
		},
		"configurationDefaults": {
			"[backlog]": {
				"editor.wordWrap": "on",
				"editor.quickSuggestions": false
			}
		},
		"jsonValidation": [
			{
				"fileMatch": "package.json",
				"url": "./schemas/package.schema.json"
			}
		]
	},
	"scripts": {
		"compile": "gulp compile --max_old_space_size=4096",
		"clean": "gulp clean --max_old_space_size=4096",
		"tslint": "gulp tslint --max_old_space_size=4096",
		"watch": "gulp watch --max_old_space_size=4096",
		"vscode:prepublish": "node ./node_modules/gulp/bin/gulp.js --gulpfile ./gulpfile.js compile ./tsconfig.json",
		"update-grammar": "node ./node_modules/gulp/bin/gulp.js --gulpfile ./syntaxes/gulpfile.js"
	},
	"dependencies": {
		"highlight.js": "9.5.0",
		"markdown-it": "^8.4.0",
		"markdown-it-named-headers": "0.0.4",
		"vscode-extension-telemetry": "^0.0.8",
		"vscode-nls": "^2.0.2",
		"vscode": "^1.1.10"
	},
	"devDependencies": {
		"@types/highlight.js": "9.1.10",
		"@types/markdown-it": "0.0.2",
		"@types/node": "7.0.43",
		"glob": "^5.0.13",
		"gulp": "^3.9.1",
		"gulp-filter": "^3.0.0",
		"gulp-rename": "^1.2.0",
		"gulp-replace": "^0.5.4",
		"gulp-tsb": "2.0.5",
		"gulp-tslint": "^8.1.2",
		"gulp-util": "^3.0.6",
		"event-stream": "^3.1.7",
		"rimraf": "^2.2.8",
		"source-map": "^0.4.4",
		"tslint": "^5.8.0",
		"typescript": "2.6.1",
		"vinyl-fs": "^2.4.3",
		"vsce": "1.33.2"
	}
}
